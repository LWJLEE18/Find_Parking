<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0d1c2f"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/first_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text=""
                android:textSize="30dp" />
        </ScrollView>

        <TextView
            android:id="@+id/second_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:text=""
            android:textSize="30dp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5">

        <Button
            android:id="@+id/clear"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="C" />

        <Button
            android:id="@+id/bracket"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="( )" />

        <Button
            android:id="@+id/percent"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="%" />

        <Button
            android:id="@+id/div"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="รท" />


        <Button
            android:id="@+id/num1"
            android:backgroundTint="#ff9721"
            android:layout_height="84dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="3" />

        <Button
            android:id="@+id/mul"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="X" />


        <Button
            android:id="@+id/num4"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="4" />

        <Button
            android:id="@+id/num5"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="5" />

        <Button
            android:id="@+id/num6"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="6" />

        <Button
            android:id="@+id/sub"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="-" />


        <Button
            android:id="@+id/num7"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="7" />

        <Button
            android:id="@+id/num8"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="8" />

        <Button
            android:id="@+id/num9"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="9" />

        <Button
            android:id="@+id/add"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="+" />


        <Button
            android:id="@+id/back"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="back" />

        <Button
            android:id="@+id/num0"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="." />

        <Button
            android:id="@+id/equal"
            android:backgroundTint="#ff9721"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="-5dp"
            android:text="=" />

    </GridLayout>
</LinearLayout>